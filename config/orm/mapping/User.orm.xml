<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="App\Entity\User" table="user">
        <id name="id" type="string" length="36" />

        <field name="name" />
        <field name="email" />
        <field name="password" />
        <field name="roles" type="simple_array" />
        <field name="token" nullable="true" />
        <field name="active" type="boolean"/>
        <field name="createdAt" type="datetime" />
        <field name="updatedAt" type="datetime" />

        <one-to-many field="enterprises" target-entity="App\Entity\Enterprise" mapped-by="owner">
            <cascade>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <one-to-many field="appointments" target-entity="App\Entity\Appointment" mapped-by="owner">
            <cascade>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <lifecycle-callbacks>
            <lifecycle-callback type="preUpdate" method="markAsUpdated"/>
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>
